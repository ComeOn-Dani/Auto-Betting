{
  "manifest_version": 3,
  "name": "Bet Automation Extension",
  "version": "1.0.0",
  "description": "Automated betting extension for casino platforms",
  "permissions": ["storage", "activeTab", "tabs", "scripting", "notifications"],
  "host_permissions": [
    "<all_urls>",
    "https://bet-automation-production.up.railway.app/*",
    "wss://bet-automation-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/not-recording.png",
      "48": "icons/not-recording.png",
      "128": "icons/not-recording.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/not-recording.png",
    "48": "icons/not-recording.png",
    "128": "icons/not-recording.png"
  }
}
